<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
  <p>
    <%= label_tag 'name' %>
    <span class="styled_input"><%= f.text_field :name %></span>
  </p>

  <p>
    <%= label_tag 'email' %>
    <span class="styled_input"><%= f.text_field :email %></span>
  </p>

  <p class="google-box">
    <%= label_tag 'google_username', 'Google Username' %>
    <%= image_tag 'info.png', :alt => '?', :class => 'google_username_help' %>
    <span class="styled_input"><%= f.text_field :google_username %></span>
  </p>

  <p>
    <%= label_tag 'password' %>
    <span class="styled_input"><%= f.password_field :password %></span>
  </p>

  <p>
    <%= label_tag 'password_confirmation', 'Confirm Password' %>
    <span class="styled_input"><%= f.password_field :password_confirmation %></span>
  </p>
  
  <%- if action_name == 'edit' -%>
    <p class="signup-btn"><%= image_submit_tag 'btn-update.png', :alt => 'Update' %></p>
  <%- else -%>
    <p class="signup-btn"><%= image_submit_tag 'btn-signup.png', :alt => 'Signup' %></p>
  <%- end -%>
<% end -%>