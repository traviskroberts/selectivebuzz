<%- flash.each do |key, msg| -%>
  <div id="<%= key %>" class="grid_12 alpha omega">
    <p style="float:right;"><%= link_to_function 'X', "$('##{key}').fadeOut()" %></p>
    <p><%= msg %></p>
    <div class="clear"></div>
  </div>
  
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      setTimeout(function(){ $("#<%= key %>").fadeOut() }, 3000);
    });
  </script>
<%- end -%>